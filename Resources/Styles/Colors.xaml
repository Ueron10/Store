<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Joyful Light Theme (TOKO YOLAN) -->
    <!-- Warna utama: ungu cerah (fun tapi tetap nyaman), dengan accent cyan -->

    <Color x:Key="Primary">#7C3AED</Color> <!-- Violet 600 -->
    <Color x:Key="PrimaryDark">#5B21B6</Color>
    <Color x:Key="PrimaryDarkText">#0F172A</Color>

    <Color x:Key="Secondary">#06B6D4</Color> <!-- Cyan 500 -->
    <Color x:Key="SecondaryDarkText">#083344</Color>
    <Color x:Key="Tertiary">#F97316</Color> <!-- Orange 500 -->

    <!-- Semantic colors -->
    <Color x:Key="Success">#22C55E</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!-- Surfaces / text -->
    <Color x:Key="PageBackground">#F8FAFC</Color> <!-- Slate 50 -->
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="TextPrimary">#0F172A</Color> <!-- Slate 900 -->
    <Color x:Key="TextSecondary">#475569</Color> <!-- Slate 600 -->

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="MidnightBlue">#0F172A</Color>
    <Color x:Key="OffBlack">#0B1220</Color>

    <!-- Neutral (lebih soft, cocok light mode) -->
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>