<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StoreProgram.Pages.NotificationsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Notifikasi dan Peringatan">
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <!-- Header -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20" 
                   HasShadow="True">
                <Grid ColumnDefinitions="*,Auto">
                    <StackLayout Grid.Column="0">
                        <Label Text="ðŸ”” Pusat Notifikasi" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource Gray900}"/>
                        <Label Text="Pantau stok kadaluarsa dan mendekati kadaluarsa" 
                               FontSize="14" 
                               TextColor="{StaticResource Gray600}"/>
                    </StackLayout>
                    <Button Grid.Column="1" 
                            Text="ðŸ—‘ï¸" 
                            BackgroundColor="Transparent" 
                            TextColor="{StaticResource Gray600}" 
                            FontSize="20" 
                            Clicked="OnClearAllClicked"/>
                </Grid>
            </Frame>

            <!-- Expired Products -->
            <StackLayout Spacing="10">
                <Label Text="ðŸš¨ Produk Sudah Kadaluarsa" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="Red"/>
                <StackLayout x:Name="ExpiredContainer" Spacing="10" />
            </StackLayout>

            <!-- Near Expiry Products -->
            <StackLayout Spacing="10">
                <Label Text="âš ï¸ Produk Mendekati Kadaluarsa" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="Orange"/>
                <StackLayout x:Name="NearingContainer" Spacing="10" />
            </StackLayout>

            <!-- Settings -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20" 
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="âš™ï¸ Pengaturan Notifikasi" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Gray900}"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="*,*" RowSpacing="10">
                        
                        <Label Grid.Row="0" 
                               Grid.Column="0" 
                               Text="Notifikasi produk kadaluarsa" 
                               FontSize="14" 
                               TextColor="{StaticResource Gray700}" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="0" 
                                Grid.Column="1" 
                                IsToggled="True"/>
                        
                        <Label Grid.Row="1" 
                               Grid.Column="0" 
                               Text="Notifikasi produk mendekati kadaluarsa" 
                               FontSize="14" 
                               TextColor="{StaticResource Gray700}" 
                               VerticalOptions="Center"/>
                        <Switch Grid.Row="1" 
                                Grid.Column="1" 
                                IsToggled="True"/>
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
