<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StoreProgram.Pages.EmployeeDashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Dashboard Pegawai">
    
    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            
            <!-- Header -->
            <Border StrokeThickness="0" Padding="20" StrokeShape="RoundRectangle 18">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="{StaticResource Secondary}" Offset="0" />
                        <GradientStop Color="{StaticResource Primary}" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <StackLayout Spacing="2">
                    <Label Text="TOKO YOLAN" FontSize="12" TextColor="White" Opacity="0.95" />
                    <Label Text="Dashboard Pegawai" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label x:Name="DateLabel" 
                           Text="Selasa, 15 Oktober 2024" 
                           FontSize="12" 
                           TextColor="White" 
                           Opacity="0.9"/>
                    <Label Text="Siap untuk bekerja hari ini!" 
                           FontSize="12" 
                           TextColor="White" 
                           Opacity="0.86"/>
                </StackLayout>
            </Border>
            
            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                
                <!-- Transaksi Hari Ini -->
                <Frame Grid.Column="0" 
                       BackgroundColor="{StaticResource Success}" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="ðŸ’°" 
                               FontSize="24" 
                               HorizontalOptions="Center"/>
                        <Label Text="Transaksi Hari Ini" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <Label x:Name="EmpDailyTransactionsLabel"
                               Text="0 Transaksi" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <Label x:Name="EmpDailySalesLabel"
                               Text="Rp 0" 
                               FontSize="14" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
                
                <!-- Stok Kritis -->
                <Frame Grid.Column="1" 
                       BackgroundColor="{StaticResource Danger}" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout>
                        <Label Text="âš ï¸" 
                               FontSize="24" 
                               HorizontalOptions="Center"/>
                        <Label Text="Stok Kritis" 
                               FontSize="12" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <Label x:Name="EmpCriticalStockCountLabel"
                               Text="0 Item" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                        <Label Text="Perlu Restock" 
                               FontSize="14" 
                               TextColor="White" 
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
                
            </Grid>
            
            <!-- Quick Actions -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="ðŸš€ Menu Utama" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Gray900}"/>
                    
                    <!-- Row 1 -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        
                        <Button Grid.Column="0" 
                                Text="ðŸ›’ Input Transaksi" 
                                BackgroundColor="{StaticResource Primary}" 
                                TextColor="White" 
                                CornerRadius="10" 
                                HeightRequest="60" 
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnNewTransactionClicked"/>
                        
                        <Button Grid.Column="1" 
                                Text="ðŸ“¦ Lihat Stok" 
                                BackgroundColor="{StaticResource Info}" 
                                TextColor="White" 
                                CornerRadius="10" 
                                HeightRequest="60" 
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnViewStockClicked"/>
                        
                    </Grid>
                    
                    <!-- Row 2 -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        
                        <Button Grid.Column="0" 
                                Text="ðŸ“¥ Update Stok" 
                                BackgroundColor="{StaticResource Warning}" 
                                TextColor="White" 
                                CornerRadius="10" 
                                HeightRequest="60" 
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnUpdateStockClicked"/>
                        
                        <Button Grid.Column="1" 
                                Text="ðŸ”” Notifikasi" 
                                BackgroundColor="{StaticResource Secondary}" 
                                TextColor="White" 
                                CornerRadius="10" 
                                HeightRequest="60" 
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnNotificationsClicked"/>
                        
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!-- Stok Menipis Alert -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   HasShadow="True">
                <StackLayout Spacing="10">
                    <Label Text="âš ï¸ Stok Menipis!" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Danger}"/>
                    
                    <StackLayout x:Name="EmpLowStockContainer" Spacing="8" />
                </StackLayout>
            </Frame>
            
            <!-- Recent Transactions -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" 
                               Text="ðŸ’³ Transaksi Terakhir" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource Gray900}"/>
                        <Label Grid.Column="1" 
                               Text="Hari ini" 
                               FontSize="12" 
                               TextColor="{StaticResource Gray600}" 
                               VerticalOptions="Center"/>
                    </Grid>
                    
                    <!-- Transaction List -->
                    <StackLayout x:Name="EmpRecentTransactionsContainer" Spacing="12" />
                </StackLayout>
            </Frame>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>