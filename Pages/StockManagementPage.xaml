                        Text="+ Tambah" 
                        BackgroundColor="{StaticResource Primary}" 
                        TextColor="White" 
                        CornerRadius="10" 
                        HeightRequest="50" 
                        WidthRequest="100" 
                        FontAttributes="Bold" 
                        Clicked="OnAddProductClicked"/>
                
