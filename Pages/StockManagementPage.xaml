                                TextColor="{StaticResource Gray600}" 
                                FontSize="16" 
                                Clicked="OnClearSearchClicked" 
                                IsVisible="False" 
                                x:Name="ClearSearchButton"/>
                    </Grid>
                </Frame>
                
                <!-- Add Product Button -->
