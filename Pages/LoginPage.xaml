<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="StoreProgram.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login - TOKO YOLAN"
             BackgroundColor="{StaticResource PageBackground}">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="24,28" RowSpacing="18">

            <!-- Header / Branding -->
            <Border Grid.Row="0"
                    StrokeThickness="0"
                    Padding="22"
                    StrokeShape="RoundRectangle 22">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="{StaticResource Primary}" Offset="0" />
                        <GradientStop Color="{StaticResource Secondary}" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 18" BackgroundColor="{StaticResource CardBackground}" WidthRequest="56" HeightRequest="56" HorizontalOptions="Start" VerticalOptions="Center">
                        <Label Text="ðŸª" FontSize="28" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Border>

                    <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="TOKO YOLAN" FontSize="22" FontAttributes="Bold" TextColor="White" />
                        <Label Text="Aplikasi kasir &amp; manajemen stok" FontSize="12" TextColor="White" Opacity="0.92" />
                    </StackLayout>
                </Grid>
            </Border>

            <!-- Login Form -->
            <Frame Grid.Row="1"
                   BackgroundColor="{StaticResource CardBackground}" 
                   CornerRadius="18" 
                   Padding="22" 
                   HasShadow="True">
                    <StackLayout Spacing="16">

                        <Label Text="Masuk" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                        <Label Text="Silakan masukkan akun untuk melanjutkan" FontSize="12" TextColor="{StaticResource TextSecondary}" />
                        
                        <!-- Username Field -->
                        <StackLayout Spacing="5">
                            <Label Text="Username" 
                                   FontAttributes="Bold" 
                                   TextColor="{StaticResource Gray900}"/>
                            <Frame BackgroundColor="{StaticResource Gray100}" 
                                   CornerRadius="10" 
                                   Padding="0" 
                                   HasShadow="False">
                                <Entry x:Name="UsernameEntry" 
                                       Placeholder="Masukkan username" 
                                       BackgroundColor="Transparent" 
                                       TextColor="{StaticResource Gray900}"
                                       PlaceholderColor="{StaticResource Gray600}"/>
                            </Frame>
                        </StackLayout>
                        
                        <!-- Password Field -->
                        <StackLayout Spacing="5">
                            <Label Text="Password" 
                                   FontAttributes="Bold" 
                                   TextColor="{StaticResource Gray900}"/>
                            <Frame BackgroundColor="{StaticResource Gray100}" 
                                   CornerRadius="10" 
                                   Padding="0" 
                                   HasShadow="False">
                                <Entry x:Name="PasswordEntry" 
                                       Placeholder="Masukkan password" 
                                       IsPassword="True" 
                                       BackgroundColor="Transparent" 
                                       TextColor="{StaticResource Gray900}"
                                       PlaceholderColor="{StaticResource Gray600}"/>
                            </Frame>
                        </StackLayout>
                        
                        <!-- Error Message -->
                        <Label x:Name="ErrorLabel" 
                               Text="Username atau password salah!" 
                               TextColor="{StaticResource Danger}" 
                               FontSize="14" 
                               HorizontalOptions="Center" 
                               IsVisible="False"/>
                        
                        <!-- Login Button -->
                        <Button x:Name="LoginButton" 
                                Text="Masuk" 
                                BackgroundColor="{StaticResource Primary}" 
                                TextColor="White" 
                                CornerRadius="12" 
                                FontAttributes="Bold" 
                                HeightRequest="52" 
                                Clicked="OnLoginClicked"/>
                        
                        <!-- Additional Actions -->
                        <StackLayout Spacing="10" Orientation="Horizontal" HorizontalOptions="Center" >
                            <Button Text="Lupa Password"
                                    BackgroundColor="{StaticResource Gray100}"
                                    TextColor="{StaticResource TextPrimary}"
                                    BorderColor="{StaticResource Gray300}"
                                    BorderWidth="1"
                                    CornerRadius="10"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    Padding="12,10"
                                    Clicked="OnForgotPasswordClicked"/>
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>
        </Grid>
    </ScrollView>
    
</ContentPage>