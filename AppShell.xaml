<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StoreProgram.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StoreProgram"
    xmlns:pages="clr-namespace:StoreProgram.Pages"
    Title="TOKO YOLAN">

    <!-- Login Page (No Shell Navigation) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login" />

    <!-- Owner Dashboard -->
    <TabBar Route="ownerdashboard">
        <Tab Title="Dashboard" Icon="home.png" Route="dashboard">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate pages:OwnerDashboardPage}"
                Route="dashboard" />
        </Tab>
        <Tab Title="Stok" Icon="package.png" Route="stock">
            <ShellContent
                Title="Manajemen Stok"
                ContentTemplate="{DataTemplate pages:StockManagementPage}"
                Route="stock" />
        </Tab>
        <Tab Title="Keuangan" Icon="money.png" Route="financial">
            <ShellContent
                Title="Keuangan"
                ContentTemplate="{DataTemplate pages:FinancialPage}"
                Route="financial" />
        </Tab>
        <Tab Title="Laporan" Icon="chart.png" Route="reports">
            <ShellContent
                Title="Laporan"
                ContentTemplate="{DataTemplate pages:ReportsPage}"
                Route="reports" />
        </Tab>
        <Tab Title="Diskon" Icon="package.png" Route="discounts">
            <ShellContent
                Title="Diskon Kadaluarsa"
                ContentTemplate="{DataTemplate pages:DiscountsPage}"
                Route="discounts" />
        </Tab>
        <Tab Title="Notifikasi" Icon="bell.png" Route="notifications">
            <ShellContent
                Title="Notifikasi"
                ContentTemplate="{DataTemplate pages:NotificationsPage}"
                Route="notifications" />
        </Tab>
    </TabBar>

    <!-- Employee Dashboard -->
    <TabBar Route="employeedashboard">
        <Tab Title="Dashboard" Icon="home.png" Route="dashboard">
            <ShellContent
                Title="Dashboard Pegawai"
                ContentTemplate="{DataTemplate pages:EmployeeDashboardPage}"
                Route="dashboard" />
        </Tab>
        <Tab Title="Stok" Icon="package.png" Route="stock">
            <ShellContent
                Title="Lihat Stok"
                ContentTemplate="{DataTemplate pages:StockManagementPage}"
                Route="stock" />
        </Tab>
        <Tab Title="Transaksi" Icon="money.png" Route="financial">
            <ShellContent
                Title="Transaksi"
                ContentTemplate="{DataTemplate pages:FinancialPage}"
                Route="financial" />
        </Tab>
        <Tab Title="Notifikasi" Icon="bell.png" Route="notifications">
            <ShellContent
                Title="Notifikasi"
                ContentTemplate="{DataTemplate pages:NotificationsPage}"
                Route="notifications" />
        </Tab>
    </TabBar>

</Shell>
